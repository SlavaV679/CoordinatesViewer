<Window x:Class="CoordinatesViewer.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoordinatesViewer"
        mc:Ignorable="d"
        Title="Authorization" Height="302" Width="429">
    <Grid>
        <Button x:Name="btnEnter" Content="Enter" HorizontalAlignment="Left" Margin="184,191,0,0" Height="24" Width="68" VerticalAlignment="Top" Click="btnEnter_Click"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Margin="158,90,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Authorisation" HorizontalAlignment="Left" Margin="155,31,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" FontStyle="Normal"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="154,63,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="154,117,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="158,155,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
